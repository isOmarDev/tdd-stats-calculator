{
  "compilerOptions": {
    "module": "ESNext",
    "target": "esnext",
    "types": ["node", "jest"],
    "lib": ["ES2020"],

    "rootDir": "src",
    "outDir": "dist",

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  }
}
